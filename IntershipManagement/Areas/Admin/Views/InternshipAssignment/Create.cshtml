@model IntershipManagement.Areas.Admin.Data.InternshipApplicationViewModel
<div class="modal-header">
    <h5 class="modal-title" id="myModalLabel">Phân công thực tập</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"
            aria-label="Close">
    </button>
</div>
<div class="modal-body">
    @using (Html.BeginForm("CreateConfirm", "InternshipAssignment", FormMethod.Post, new { area = "Admin", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3 row">
                <label for="Name" class="col-md-4 col-form-label">Mô tả</label>
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", @rows = 5 })
                </div>
            </div>
            <div class="mb-3 row">
                @Html.LabelFor(m => m.TeacherId, "GVHD", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.TeacherId,
                                          new SelectList(Model.Teachers, "Id", "FullNameWithMajor"),
                                          "--Chọn giáo viên--",
                                          new { @class = "form-control" })
                </div>
            </div>
            <div class="mb-3 row">
                @Html.LabelFor(m => m.CourseClassId, "Nhóm thực tập", htmlAttributes: new { @class = "control-label col-md-4", @required = "required" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.CourseClassId, new SelectList(Model.CourseClasses, "Id", "NameCode"), "--Chọn nhóm--", new { @class = "form-control", @required = "required" })
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light"
                    data-bs-dismiss="modal">
                Thoát
            </button>
            <button type="submit" class="btn btn-primary ">Lưu</button>
        </div>
    }
</div>