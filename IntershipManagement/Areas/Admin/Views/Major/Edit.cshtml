@model IntershipManagement.Models.Major
@{

}
<div class="modal-header">
    <h5 class="modal-title" id="myModalLabel">Thông tin chuyên ngành</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"
            aria-label="Close">
    </button>
</div>
<div class="modal-body">
    @using (Html.BeginForm("EditConfirm", "Major", FormMethod.Post, new { area = "Admin", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Createdate)
        @Html.HiddenFor(model => model.Createby)
        <div class="mb-3 row">
            <label for="example-name-input" class="col-md-2 col-form-label">Mã chuyên ngành</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
        <div class="mb-3 row">
            <label for="example-password-input" class="col-md-2 col-form-label">Tên chuyên ngành</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
        </div>
    </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light"
                    data-bs-dismiss="modal">
                Thoát
            </button>
            <button type="submit" class="btn btn-primary ">Lưu</button>
        </div>
    }
</div>

