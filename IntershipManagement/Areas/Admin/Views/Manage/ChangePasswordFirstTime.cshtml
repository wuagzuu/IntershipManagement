@model IntershipManagement.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("ChangePasswordFirstTime", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-auth-small", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger", @role = "alert" })
    @Html.HiddenFor(c => c.UserName, new { @Value = User.Identity.Name });
    <div class="form-floating form-floating-custom mb-3">
        <h4>Đổi mật khẩu lần đầu</h4>
    </div>
    <div class="form-floating form-floating-custom mb-3">
        @*<input type="password" class="form-control" id="input-password" placeholder="Enter Password">*@
        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @id = "input-password", @placeholder = "Enter Password" })
        <label for="input-password">Mật khẩu hiện tại</label>
        <div class="form-floating-icon">
            <i class="uil uil-padlock"></i>
        </div>
    </div>
    <div class="form-floating form-floating-custom mb-3">
        @*<input type="password" class="form-control" id="input-password" placeholder="Enter Password">*@
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @id = "input-password", @placeholder = "Enter Password" })
        <label for="input-password">Mật khẩu mới</label>
        <div class="form-floating-icon">
            <i class="uil uil-padlock"></i>
        </div>
    </div>
    <div class="form-floating form-floating-custom mb-3">
        @*<input type="password" class="form-control" id="input-password" placeholder="Enter Password">*@
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "input-password", @placeholder = "Enter Password" })
        <label for="input-password">Xác nhận lại</label>
        <div class="form-floating-icon">
            <i class="uil uil-padlock"></i>
        </div>
    </div>
    <div class="mt-3">
        <button class="btn btn-info w-100" type="submit">Đổi mật khẩu</button>
    </div>
}
