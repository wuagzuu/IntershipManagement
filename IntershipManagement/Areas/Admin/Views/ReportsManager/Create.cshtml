@model IntershipManagement.Models.ReportTemplate

@{

}
<div class="modal-header">
    <h5 class="modal-title" id="myModalLabel">Thông tin mẫu báo cáo</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"
            aria-label="Close">
    </button>
</div>
<div class="modal-body">
    @using (Html.BeginForm("CreateConfirm", "ReportsManager", FormMethod.Post, new { area = "Admin", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3 row">
                <label for="Code" class="col-md-4 col-form-label">Tiêu đề</label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Deadline" class="col-md-4 col-form-label">Hạn nộp</label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Deadline, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "required" } })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Content" class="col-md-4 col-form-label">Nội dung</label>
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @rows = 5, @required = "required" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Round" class="col-md-4 col-form-label">Tuần</label>
                <div class="col-md-8">
                    @Html.DropDownListFor(model => model.Round, (SelectList)ViewBag.Rounds, new { @class = "form-control", @required = "required" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Attachment" class="col-md-4 col-form-label">Tệp báo cáo mẫu</label>
                <div class="col-md-8">
                    <input type="file" name="Attachment" class="form-control" />
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light"
                    data-bs-dismiss="modal">
                Thoát
            </button>
            <button type="submit" class="btn btn-primary ">Lưu</button>
        </div>
    }
</div>
