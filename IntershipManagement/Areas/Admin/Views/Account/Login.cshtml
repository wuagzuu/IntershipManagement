@using IntershipManagement.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-auth-small", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger", @role = "alert" })
    <form>
        <div class="form-floating form-floating-custom mb-3">
            @*<input type="text" class="form-control" id="input-username" placeholder="Enter User name">*@
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "input-username", @placeholder = "Enter User name" })
            <label for="input-username">Tài khoản</label>
            <div class="form-floating-icon">
                <i class="uil uil-users-alt"></i>
            </div>
        </div>
        <div class="form-floating form-floating-custom mb-3">
            @*<input type="password" class="form-control" id="input-password" placeholder="Enter Password">*@
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "input-password", @placeholder = "Enter Password" })
            <label for="input-password">Mật khẩu</label>
            <div class="form-floating-icon">
                <i class="uil uil-padlock"></i>
            </div>
        </div>

        <div class="form-check form-check-info font-size-16">
            @*<input class="form-check-input bg-soft-primary" type="checkbox" id="remember-check">*@
            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", @id = "remember-check" })
            <label class="form-check-label font-size-14" for="remember-check">
                Nhớ mật khẩu
            </label>
        </div>

        <div class="mt-3">
            <button class="btn btn-info w-100" type="submit">Đăng nhập</button>
        </div>

    </form><!-- end form -->
}